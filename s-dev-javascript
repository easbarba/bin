#!/usr/bin/env bash

# Debug Options
set -euo pipefail

DEPS=(npm)
s-checkdeps "${DEPS[@]}"

[[ ! -x $HOME/.bun/bin/bun ]] && curl https://bun.sh/install | bash

ESSENTIAL=(npm yarn)
TOOLS=(stylelint js-beautify prettier @nestjs/cli ts-node typescript-language-server )
LANGS=(typescript)

groups=("${ESSENTIAL[@]}" "${TOOLS[@]}" "${LANGS[@]}")

for group in "${groups[@]}"; do
	s-dolist 'npm install --global' "$group"
done

# Update all packages
npm update --global

[[ ! -x $HOME/.deno/bin/deno ]] && curl -fsSL https://deno.land/install.sh | bash
