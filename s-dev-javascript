#!/usr/bin/env bash

# Debug Options
set -euo pipefail

DEPS=(npm)
s-checkdeps "${DEPS[@]}"

ESSENTIAL=(npm)
LIBS=(stylelint js-beautify)
LANGS=(typescript)

groups=("${ESSENTIAL[@]}" "${LIBS[@]}" "${LANGS[@]}")

for group in "${groups[@]}"; do
	s-dolist 'npm install --global' "$group"
	s-dolist 'npm update --global' "$group"
done
