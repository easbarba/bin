#!/usr/bin/env bash

# Debug Options
set -euo pipefail

DEPS=(npm)
s-checkdeps "${DEPS[@]}"

[[ ! -x $HOME/.bun/bin/bun ]] && curl https://bun.sh/install | bash

essential=(npm yarn)
tools=(stylelint js-beautify prettier ts-node typescript-language-server)
frameworks=(@angular/cli @nestjs/cli)
langs=(typescript)

groups=("${essential[@]}" "${tools[@]}" "${frameworks[@]}" "${langs[@]}")

for group in "${groups[@]}"; do
	s-dolist 'npm install --global' "$group"
done

# Update all packages
npm update --global

[[ ! -x $HOME/.deno/bin/deno ]] && curl -fsSL https://deno.land/install.sh | bash
