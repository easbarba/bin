[
  {
    "lang": "ruby",
    "deps": ["ruby", "gem"],
    "command": "gem update",
    "packages": {
      "essentials": ["bundler", "rake"],
      "tools": ["ruby-lsp", "reek", "rufo", "rubocop", "pry", "taglib-ruby"]
    }
  },

  {
    "lang": "javascript",
    "deps": ["npm"],
    "command": "npm install --global",
