      "essential": ["npm"],
      "tools": ["stylelint", "js-beautify", "prettier", "@prettier/plugin-php"],
      "node": ["nodemon"],
      "ts": ["typescript"],
      "ts_tools": ["ts-node", "typescript-language-server"]
    }
  },
  {
    "lang": "golang",
    "deps": ["go"],
