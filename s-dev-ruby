#!/usr/bin/env bash

# Debug Options
set -euo pipefail

DEPS=(ruby gem)
s-checkdeps "${DEPS[@]}"

essential=(bundler rake)
tools=(reek rufo rubocop solargraph pry taglib-ruby)
apps=(jekyll)

all=("${essential[@]}" "${tools[@]}" "${apps[@]}")

for i in "${all[@]}"; do
    s-echo "-> $i"

    [[ ! -x $(command -v $i) ]] && gem install $i
    gem update $i
done
