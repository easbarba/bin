#!/usr/bin/env bash

# info: https://harelang.org/installation

BUILDS_HOME="$HOME/Builds"

cd $BUILDS_HOME

[[ ! -d $BUILDS_HOME/qbe/.git ]] && git clone git://c9x.me/qbe.git $BUILDS_HOME/qbe
cd qbe
make
sudo make install

cd $BUILDS_HOME

[[ ! -d $BUILDS_HOME/scdoc/.git ]] && git clone https://git.sr.ht/~sircmpwn/scdoc $BUILDS_HOME/scdoc
cd scdoc
make
sudo make install

cd $BUILDS_HOME

[[ ! -d $BUILDS_HOME/harec/.git ]] && git clone https://git.sr.ht/~sircmpwn/harec $BUILDS_HOME/harec

cd harec
mkdir build
cd build
../configure
make
sudo make install

cd $BUILDS_HOME

[[ ! -d $BUILDS_HOME/hare/.git ]] && git clone https://git.sr.ht/~sircmpwn/hare $BUILDS_HOME/hare
cd hare
cp config.example.mk config.mk
make
sudo make install

exit
