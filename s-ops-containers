#!/usr/bin/env bash

# Debug Options
set -euo pipefail

DEPS=(sudo podman)
s-checkdeps "${DEPS[@]}"

RUNNER='podman pull'
REGISTRY='docker.io/library'

langs=(golang:1.19-alpine node:18-alpine openjdk:17-jdk maven:3-eclipse-temurin-17 ruby:3-alpine)
db=(postgres:15-alpine mongo:6)
latest=(alpine:latest busybox:latest)
distro=(debian:bullseye rockylinux:8)

all=("${langs[@]}" "${db[@]}" "${latest[@]}" "${distro[@]}")

for image in "${all[@]}"; do
    s-dolist "$RUNNER" "$REGISTRY/$image"
done

exit
# docker images | grep -v REPOSITORY | awk 'BEGIN{OFS=":"} {print $1,$2}' | xargs -L1 docker pull
