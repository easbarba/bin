#!/usr/bin/env bash

# Debug Options
set -euo pipefail

DEPS=(sudo podman)
s-checkdeps "${DEPS[@]}"

PULL='podman pull'
REGISTRY='docker.io/library/'

stable=(ruby:3-alpine node:18-alpine postgres:14-alpine mongo:6 redis:7)
distro=(debian:bullseye)

groups=("${stable[@]}"
    "${latest[@]}"
    "${distro[@]}")

for group in "${groups[@]}"; do
    s-dolist "$PULL" "$group"
done

# docker images | grep -v REPOSITORY | awk 'BEGIN{OFS=":"} {print $1,$2}' | xargs -L1 docker pull
