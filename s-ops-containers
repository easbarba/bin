#!/usr/bin/env bash

# Debug Options
set -euo pipefail

DEPS=(sudo podman)
s-checkdeps "${DEPS[@]}"

PULL='podman pull'
REGISTRY='docker.io/library'

stable=(golang:1.19-alpine node:16-alpine postgres:15-alpine mongo:6 rockylinux:8)
latest=(alpine:latest busybox:latest)
distro=(debian:bullseye)

all=("${stable[@]}" "${latest[@]}" "${distro[@]}")

for image in "${all[@]}"; do
    s-dolist "$PULL" "$REGISTRY/$image"
done

exit
# docker images | grep -v REPOSITORY | awk 'BEGIN{OFS=":"} {print $1,$2}' | xargs -L1 docker pull
