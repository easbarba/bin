#!/usr/bin/env bash

# Debug Options
set -euo pipefail

DEPS=(sudo podman)
s-checkdeps "${DEPS[@]}"

PULL='podman pull'
REGISTRY='docker.io/library'

stable=(openjdk:17-jdk maven:3-eclipse-temurin-17 node:18-alpine postgres:15-alpine mongo:6)
latest=(openjdk:19-jdk-alpine alpine:latest busybox:latest)
distro=(debian:bullseye rockylinux:8)

all=("${stable[@]}" "${latest[@]}" "${distro[@]}")

for image in "${all[@]}"; do
    s-dolist "$PULL" "$REGISTRY/$image"
done

exit
# docker images | grep -v REPOSITORY | awk 'BEGIN{OFS=":"} {print $1,$2}' | xargs -L1 docker pull
