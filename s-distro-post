# Description: Configure/Install distro independent software

s-echo "Post Install"

paste() {
    file=$1
    to=$2

    [[ ! -f $to ]] && return

    if [[ ! $(grep -rni "$file" "$to") ]]; then
        echo "[[ -f $file ]] && source $file" >>$to
    fi
}

paste '$HOME/.config/bash/config.sh' "$HOME/.bashrc"
paste '$HOME/.config/bash/aliases.sh' "$HOME/.bashrc"
paste '$HOME/.config/bash/profile.sh' "$HOME/.bash_profile"

# default folders
mkdir -pv "$HOME"/{Downloads,Pictures,Documents,Videos,Builds,Projects,.local/bin,.config/scripts}

# silent parallel, for good.
[[ -x $(command -v parallel) ]] && parallel --citation

# Add Flathub Repository
[[ -x $(command -v flatpak) ]] && flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo

# cache all system fonts
sudo fc-cache -fv

# create or update the manual page index caches
sudo mandb

# brightnessctl acess
# sudo usermod -a -G video,input $USER
