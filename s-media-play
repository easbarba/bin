# DEBUG OPTIONS
set -euo pipefail

# Description: Play media given in system clipboard, or provided in terminal or replay last media.
PLAYER=mpv
LOG_FILE="$HOME/.config/scripts/play"

[[ ! -x $(command -v $PLAYER) ]] && echo "Player [ $PLAYER ] not found, exiting!" && exit

replay_last_media() {
    echo ">> Replaying last watched media"

    local last
    last=$(tail -1 "$LOG_FILE")

    play "$last"
}

log_url() {
    echo ">> logging url"
    printf "%s" url >>"$LOG_FILE"
}

play() {
    log_url

    echo ">> playing $1"
    $PLAYER "$1"

    exit 0
}

# PARSE CLI OPTIONS
OPTIONS=$(getopt --name play --options lhu: --longoptions last,help,url: -- "$@")
eval set -- "$OPTIONS"
unset OPTIONS
while true; do
    case "$1" in
        -l | --last)
            replay_last_media
            ;;
        -u | --url)
            echo "Playing media with url: $2"
            play "$2"
            ;;
        -h | --help)
            echo "Usage: play [ -l | --last ] [ -u | --url  URL ] [ -h | --help ]"
            break
            ;;
        *)
            play "$(s-url)"
            ;;
    esac
done

exit
